<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivityStart">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/flappybirdfont"
        android:text="Slidy Bird"
        android:textColor="#FFB700"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/flappybirdfont"
        android:text="By: Kushaal Latupalli"
        android:textColor="#FFB700"
        android:textSize="65sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageView
        android:id="@+id/gifStart"
        android:layout_width="228dp"
        android:layout_height="169dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/creator"
        app:layout_constraintStart_toStartOf="@+id/creator"
        app:layout_constraintTop_toBottomOf="@+id/creator"
        app:srcCompat="@drawable/flappybirdgif" />

    <ImageView
        android:id="@+id/imageViewStart"
        android:layout_width="128dp"
        android:layout_height="71dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/playbtn"
        android:fontFamily="@font/flappybirdfont"
        android:foreground="@drawable/playbtn"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/gifStart"
        app:layout_constraintStart_toStartOf="@+id/gifStart"
        app:layout_constraintTop_toBottomOf="@+id/gifStart" />

    <TextView
        android:id="@+id/textView60Seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/flappybirdfont"
        android:gravity="center"
        android:text="Sixty Seconds"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewStart"
        app:layout_constraintStart_toStartOf="@+id/imageViewStart"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStart" />

    <TextView
        android:id="@+id/textViewEndless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/flappybirdfont"
        android:gravity="center"
        android:text="Endless"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/textView60Seconds"
        app:layout_constraintStart_toStartOf="@+id/textView60Seconds"
        app:layout_constraintTop_toBottomOf="@+id/textView60Seconds" />

</androidx.constraintlayout.widget.ConstraintLayout>